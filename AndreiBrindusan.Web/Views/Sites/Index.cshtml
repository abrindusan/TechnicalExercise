@model IEnumerable<AndreiBrindusan.DataModel.Site>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SiteName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SiteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SiteId">Edit</a> |
                <a asp-action="Index" asp-controller="RequestedDrugs" asp-route-id="@item.SiteId">Request Drugs</a> |
                <a asp-action="Details" asp-route-id="@item.SiteId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SiteId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
